<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tileBlurs.TileBlurActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/status_bar_color"
        android:paddingHorizontal="5dp"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/back"
            />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blur"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            />


        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_img_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/save"
            />
        <LinearLayout
            android:id="@+id/undo_container"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/redo_container"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.8"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo"
                android:contentDescription="@string/undo"
                />
            <TextView
                android:id="@+id/undo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redo_container"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/save"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.9"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_redo"
                android:contentDescription="@string/undo"
                />
            <TextView
                android:id="@+id/redo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/body"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/option_area"
        >
        <com.techyasoft.blureffect.customViews.BlurView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/option_area"
        app:layout_constraintBottom_toTopOf="@id/footer"
        android:layout_marginBottom="5dp"
        android:background="@drawable/options_container_bg"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/blur_options_container"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/power"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp"
                android:textColor="@color/status_bar_color"
                />

            <TextView
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power"
                app:layout_constraintStart_toEndOf="@id/size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <SeekBar
                android:id="@+id/offset_size_progress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/size"
                app:layout_constraintBottom_toBottomOf="parent"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/status_bar_color"
                android:thumbTint="@color/white"
                />

            <SeekBar
                android:id="@+id/power_progress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/size"
                app:layout_constraintBottom_toBottomOf="parent"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/status_bar_color"
                android:thumbTint="@color/white"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/offset_options_container"
            >
            <TextView
                android:id="@+id/offset_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                app:layout_constraintStart_toStartOf="@id/size_progress"
                app:layout_constraintEnd_toStartOf="@id/offset_power"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp"
                android:textColor="@color/status_bar_color"
                />

            <TextView
                android:id="@+id/offset_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power"
                app:layout_constraintStart_toEndOf="@id/offset_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <SeekBar
                android:id="@+id/size_progress"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@id/orientation_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offset_size"
                app:layout_constraintBottom_toBottomOf="parent"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/status_bar_color"
                android:thumbTint="@color/white"
                />

            <SeekBar
                android:id="@+id/offset_progress"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@id/orientation_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offset_size"
                app:layout_constraintBottom_toBottomOf="parent"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/status_bar_color"
                android:thumbTint="@color/white"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/orientation_container"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"
                >
                <ImageView
                    android:id="@+id/left_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_active_offset"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/centre_offset"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/centre_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_center_offset"
                    app:layout_constraintStart_toEndOf="@id/left_offset"
                    app:layout_constraintEnd_toStartOf="@id/right_offset"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/right_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_active_offset"
                    app:layout_constraintStart_toEndOf="@id/centre_offset"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/footer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/footer_bg"
        >


        <LinearLayout
            android:id="@+id/auto_blur_container"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/blur_container"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/status_bar_color"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/inactive_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_auto_blur"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    />

                <ImageView
                    android:id="@+id/active_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    android:src="@drawable/ic_auto_blur" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_blur"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blur_container"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/auto_blur_container"
            app:layout_constraintEnd_toStartOf="@id/unblur_container"
            android:orientation="vertical"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/inactive_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_blur_icon"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/active_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    android:src="@drawable/ic_blur_icon_active"
                     />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blur"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/unblur_container"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/blur_container"
            app:layout_constraintEnd_toStartOf="@id/offset_container"
            android:orientation="vertical"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/inactive_unblur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_unblur_icon"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    />

                <ImageView
                    android:id="@+id/active_unblur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    android:src="@drawable/ic_unblur_icon_active"
                     />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unblur"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/offset_container"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/unblur_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/inactive_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_offset_icon"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    />

                <ImageView
                    android:id="@+id/active_offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/inactive_autoblur"
                    android:src="@drawable/ic_offset_icon_active"
                     />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offset"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>